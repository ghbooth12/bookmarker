<%= form_for [topic, bookmark] do |f| %>
  <% if bookmark.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h4><%= pluralize(bookmark.errors.count, "error") %></h4>
      <ul>
        <% bookmark.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :url, "Bookmark URL" %>
    <%= f.url_field :url, autofocus: true, class: 'form-control', placeholder: 'http://www.example.com' %>
  </div>

  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
  <%= f.submit 'Save Bookmark', class: 'btn btn-primary' %>
<% end %>
