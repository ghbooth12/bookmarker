<% if policy(Like.new).create? %>
  <%= content_tag :div, id: "bookmark-#{bookmark.id}" do %>
    <% if like = current_user.liked(bookmark) %>
      <%= link_to fa_icon('heart', 'aria-hidden' => true, text: bookmark.likes.count), [bookmark, like], method: :delete, remote: true, class: 'btn-xs btn-warning' %>
    <% else %>
      <%= link_to fa_icon('heart', 'aria-hidden' => true, text: bookmark.likes.count), bookmark_likes_path(bookmark), method: :post, remote: true, class: 'btn-xs btn-primary' %>
    <% end %>
  <% end %>
<% end %>
